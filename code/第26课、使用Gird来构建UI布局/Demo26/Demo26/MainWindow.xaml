<Window x:Class="Demo26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo26"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--属性》》布局-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="120"/>
            <ColumnDefinition MinWidth="150"/>
            <ColumnDefinition MinWidth="100"/>
        </Grid.ColumnDefinitions>

        <Rectangle Width="100" Height="50" Fill="Red"/>
        <Rectangle Width="100" Height="50" Fill="Green" Grid.Column="1"/>
        <Rectangle Width="100" Height="50" Fill="Blue" Grid.Column="2"/>
        <Rectangle Width="100" Height="50" Fill="Yellow" Grid.Row="1"/>
        <Rectangle Width="100" Height="50" Fill="Black" Grid.Row="1" Grid.Column="1"/>
        <Rectangle Width="100" Height="50" Fill="DarkBlue" Grid.Row="1" Grid.Column="2"/>

    </Grid>
</Window>

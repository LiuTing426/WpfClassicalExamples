<Window x:Class="Demo69.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo69"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--先画一个渐变色，然后为了所有都用统一的渐变色，使用静态资源-->
    <Window.Resources>
        <LinearGradientBrush x:Key="myBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFC8745D" Offset="1"/>
            <GradientStop Color="#FF8DBC58" Offset="0.243"/>
            <GradientStop Color="#FF207753" Offset="0.491"/>
            <GradientStop Color="#FF2236A5" Offset="0.629"/>
        </LinearGradientBrush>
    </Window.Resources>
    <StackPanel Orientation="Horizontal">
        <!--手动绑定myBrush-->
        <Border Width="150" Height="80" Margin="10" Background="{StaticResource myBrush}"/>

        <!--属性》》画笔》》Background》》创建数据绑定》》绑定类型：StaticResource 选择myBrush 》》确定-->
        <Border Width="150" Height="80" Margin="10" Background="{Binding Mode=OneWay, Source={StaticResource myBrush}}"/>
    
        <!--以上两个效果一样！！-->
    </StackPanel>
</Window>

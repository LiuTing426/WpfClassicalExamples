<Window x:Class="Demo20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo20"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <!--属性》》公共 》》设置属性 最大值，最小值，改变跨度等
        AutoToolTipPlacement 滑块上会显示数字
        Orientation设置滑块竖着还是横着
        TickPlacement 摆放刻度线的位置
        TickFrequency 刻度线间隔
        IsSnapToTickEnabled 是否对齐刻度线
        IsSelectionRangeEnabled 是否启用范围 搭配SelectionStart和SelectionEnd
        -->
        <Slider x:Name="slider" Maximum="100" SmallChange="1" LargeChange="5" Value="25" AutoToolTipPlacement="TopLeft" TickPlacement="TopLeft" IsSnapToTickEnabled="True" IsSelectionRangeEnabled="True" SelectionStart="20" SelectionEnd="80"   />
        <TextBlock>
            <Run Text="滑块的值"/>
            <!--属性》》杂项》》Text创建数据绑定》》ElementName》》选择slider》》选择Value-->
            <Run Text="{Binding Value, ElementName=slider}" />
        </TextBlock>
    </StackPanel>
</Window>

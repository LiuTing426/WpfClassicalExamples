<Window x:Class="Demo47.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo47"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="myBrush" Color="GreenYellow"/>
    </Window.Resources>
    <Grid>
        <!--属性》》画笔》》画笔资源》》本地资源-->
        <!--动态资源和静态资源可以互换-一般用静态资源-->
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="129,164,0,0" 
               VerticalAlignment="Top" FontSize="48" FontWeight="Bold" 
               Background="{x:Static SystemColors.ControlDarkBrush}" Width="513" Height="118" 
               Foreground="{StaticResource myBrush}"/>

    </Grid>
</Window>

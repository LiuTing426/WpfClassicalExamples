<Window x:Class="Demo72.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo72"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <!--系统桌面颜色-->
        <Rectangle Width="200" Height="200" Fill="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}"/>

        <!--系统桌面的字体样式-->
        <TextBlock Text="演示文本" 
                   FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamily}}"
                   FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}"
                   FontWeight="{DynamicResource {x:Static SystemFonts.CaptionFontWeight}}"/>
    </StackPanel>
</Window>

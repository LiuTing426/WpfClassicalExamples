<Window x:Class="Demo05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="打开WindowDialog对话框" Click="ShowWinDlg_Click" Margin="5" Padding="5" />
            <Button Content="打开文件对话框" Click="OpenFileDlg_Click" Margin="5" Padding="5"/>
            <Button Content="打开保存对话框" Click="OpenAndSave_Click" Margin="5" Padding="5"/>
            <Button Content="打印对话框" Click="OpenPrint_Click"  Margin="5" Padding="5"/>
            <Button Content="打开字体对话框" Click="OpenFont_Click" Margin="5" Padding="5"/>
            <Button Content="打开颜色对话框" Click="OpenColor_Click" Margin="5" Padding="5"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <ListBox x:Name="lb_DialogResult"/>
        </StackPanel>
    </Grid>
</Window>

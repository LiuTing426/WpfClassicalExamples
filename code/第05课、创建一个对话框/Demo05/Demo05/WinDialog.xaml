<Window x:Class="Demo05.WinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo05"
        mc:Ignorable="d"
        Title="Win对话框" Height="207" Width="439" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" SizeToContent="Manual">
    <!--设置对话框不能有任务栏按钮和最大化最小化，显示位置在屏幕中心-->
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="这是一个对话框"/>
        </StackPanel>
        <!--布局》》》点击下箭头》》》选择FlowDirection 将两个按钮排向最右边-->
        <StackPanel DockPanel.Dock="Bottom"  Orientation="Horizontal" FlowDirection="RightToLeft" >
            <Button Content="Cancel" Click="ButtonCancel_Click" Margin="5" Padding="5" Width="100"/>
            <Button Content="OK" Click="ButtonOK_Click" Margin="5" Padding="5" Width="100"/>
        </StackPanel>
        <TextBlock/>
    </DockPanel>
</Window>

<Window x:Name="window" x:Class="Demo42.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo42"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <!--属性》》列》》ItemSource》》创建数据源绑定-->
        <!--第一种-->
        <!--<DataGrid ItemsSource="{Binding Employees, ElementName=window}"/>-->
        
        <!--第二种 可自定义Header顺序-->
        <!--属性》》列》》Columns》》编辑集合中的项-->
        <!--<DataGrid ItemsSource="{Binding Employees, ElementName=window}" AutoGenerateColumns="False">-->
        <!--ItemsSource可以在.cs文件中实现-->
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{ Binding FirstName}" Header="FirstName"/>
                <DataGridTextColumn Binding="{ Binding LastName}" Header="LastName"/>
                <DataGridTextColumn Binding="{ Binding Department}" Header="Department"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="查看" Click="Button_Click" Width="100"/>
    </StackPanel>
</Window>

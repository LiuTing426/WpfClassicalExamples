<Window x:Class="Demo38.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo38"
        mc:Ignorable="d"
        Title="MainWindow" Height="167" Width="414"
        x:Name="window">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="39,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="所在的部门"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="144,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Department, ElementName=window, Mode=OneWay}"/>
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="39,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="姓名"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="111,55,0,0" TextWrapping="Wrap" Text="{Binding PersonName, ElementName=window}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="提交" HorizontalAlignment="Left" Margin="39,104,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="重置" HorizontalAlignment="Left" Margin="169,104,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>

    </Grid>
</Window>

<!--第二种方法 添加控件Frame-->
<Window x:Class="Demo04.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo04"
        mc:Ignorable="d"
        Title="MainWindow2" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Content="page1" Click="btnPage1_click" Height="60" Width="200" Margin="0,10,0,0"/>
            <Button Content="page2" Click="btnPage2_click" Height="60" Width="200" Margin="0,10,0,0"/>
            <Button Content="page3" Click="btnPage3_click" Height="60" Width="200" Margin="0,10,0,0"/>
        </StackPanel>

        <!--Frame属性》》》公共》》》Source 选择page页，，NavigationUIVisibility 隐藏前进 后退键-->
        <Frame x:Name="FrameA" Grid.Column="1" Source="/Page1.xaml" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>

    </Grid>
</Window>

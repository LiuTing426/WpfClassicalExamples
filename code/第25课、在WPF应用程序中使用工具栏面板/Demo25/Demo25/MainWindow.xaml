<Window x:Class="Demo25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo25"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!--属性》》布局》》Dock-->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="B" Width="20" FontWeight="Bold" VerticalAlignment="Bottom" Margin="0,0,0,0.6" Height="21" Click="Button_Click"/>
                <Button Content="I" Width="20" FontStyle="Italic" Click="Button_Click_1"/>
                <Button Click="Button_Click_2">
                    <TextBlock Text="U" TextDecorations="Underline"/>
                </Button>
            </ToolBar>

            <ToolBar>
                <ComboBox SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12" IsSelected="True"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                </ComboBox>
            </ToolBar>
        </ToolBarTray>
        <TextBox x:Name="text" Text="测试文本..."/>

    </DockPanel>
</Window>
